@model IEnumerable<CourseProject.Models.EventSchedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RangeOfHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepeatPattern)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RangeOfHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepeatPattern)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventScheduleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventScheduleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventScheduleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
