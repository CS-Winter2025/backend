@model Resident

@{
    ViewData["Title"] = "Details";
    var parsedDetails = ViewBag.Details as Dictionary<string, string> ?? new();
}

<h1>Details</h1>

<div>
    <h4>Resident</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceSubscriptionIds)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceSubscriptionIds)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsCurrentlyLiving)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCurrentlyLiving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Model.Name.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Model.Address.ToString()
        </dd>
        <dt class="col-sm-2">
            Additional Details
        </dt>
        @foreach (var pair in parsedDetails)
        {
            <div class="form-group d-flex gap-2">
                <dd class="col-sm-10">@pair.Key</dd>
                <dd action="col-sm-10">@pair.Value</dd>
            </div>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfilePicture)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)" alt="Resident Photo" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <p>No photo available</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ResidentId">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a href="@Url.Action("Index", "Calendar", new { personId = Model.ResidentId, isEmployee = false })">View Resident Calendar</a>
</div>
