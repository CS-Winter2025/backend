@model Resident

@{
    ViewData["Title"] = "Edit";
    var parsedDetails = ViewBag.Details as Dictionary<string, string> ?? new();
}

<h1>Edit</h1>

<h4>Resident</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResidentId" />
            <div class="form-group">
                <label asp-for="ServiceSubscriptionIds" class="control-label"></label>
                <input asp-for="ServiceSubscriptionIds" class="form-control" />
                <span asp-validation-for="ServiceSubscriptionIds" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCurrentlyLiving" /> @Html.DisplayNameFor(model => model.IsCurrentlyLiving)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <h5>Additional Details</h5>
            <div id="details-container">
                @foreach (var pair in parsedDetails)
                {
                    <div class="form-group d-flex gap-2">
                        <input type="text" class="form-control detail-key" placeholder="Key" value="@pair.Key" />
                        <input type="text" class="form-control detail-value" placeholder="Value" value="@pair.Value" />
                    </div>
                }
            </div>

            <button type="button" class="btn btn-sm btn-secondary" onclick="addDetail()">Add Detail</button>

            <input type="hidden" id="DetailsJson" name="DetailsJson" value="@Model.DetailsJson" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/residentEdit.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
