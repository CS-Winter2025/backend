@model CourseProject.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1 class="title titleFont">Edit</h1>

<div class="content-container">
    <h4 class="header headerFont">Service</h4>
    <hr class="mb-4" />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ServiceID" />
                <div class="form-group mb-3">
                    <label asp-for="Type" class="control-label text-dark"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Rate" class="control-label text-dark"></label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Requirements" class="control-label text-dark"></label>
                    <input asp-for="Requirements" class="form-control" />
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn secondaryCare btn-lg rounded" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="action-links mt-3">
    <a asp-action="Index" class="btn btn-link text-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
