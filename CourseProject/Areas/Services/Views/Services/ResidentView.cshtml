@model IEnumerable<CourseProject.Models.Service>

@{
    ViewData["Title"] = "Available Services";
}

<h2>Available Services</h2>

<table class="table">
    <thead>
    <tr>
        <th>Type</th>
        <th>Rate</th>
        <th>Requirements</th>
        <th>Calendar</th> 
    </tr>
    </thead>
    <tbody>
    @foreach (var service in Model)
    {
        <tr>
            <td>@service.Type</td>
            <td>@service.Rate.ToString("C")</td>
            <td>@(service.Requirements != null ? string.Join(", ", service.Requirements) : "None")</td>
            <td>
                <a class="btn btn-sm btn-outline-info"
                   href="/Calendar/EventSchedules/Index?personId=@Context.Session.GetInt32("PersonId")&isEmployee=false&serviceId=@service.ServiceID">
                    View in Calendar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>