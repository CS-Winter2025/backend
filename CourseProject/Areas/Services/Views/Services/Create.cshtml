@model CourseProject.Models.Service

@{
    ViewData["Title"] = "Create";
}

<h1 class="title titleFont text-dark">Create</h1>

<h4 class="header headerFont text-secondary">Service</h4>
<hr class="mb-4" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label text-dark"></label>
                <input asp-for="Type" class="form-control form-control-sm rounded-3" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Rate" class="control-label text-dark"></label>
                <input asp-for="Rate" class="form-control form-control-sm rounded-3" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Requirements" class="control-label text-dark"></label>
                <input asp-for="Requirements" class="form-control form-control-sm rounded-3" />
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn secondaryCare btn-lg rounded" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-link text-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
